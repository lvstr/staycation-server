<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Booking Table</h6>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table
        class="table table-bordered"
        id="dataTable"
        width="100%"
        cellspacing="0"
      >
        <thead>
          <tr>
            <th>No</th>
            <th>Invoice</th>
            <th>Date</th>
            <th>Title</th>
            <th>Name Member</th>
            <th>Status</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody class="align-items-center text-center">
          <% for( let i = 0; i < booking.length; i++ ) { %>
          <tr>
            <td><%= i + 1 %></td>
            <td>#<%= booking[i].invoice %></td>
            <td>
              <%= booking[i].bookingStartDate.toLocaleString().split(',')[0] %>
              s/d <%= booking[i].bookingEndDate.toLocaleString().split(',')[0]
              %>
            </td>
            <td><%= booking[i].itemId.title %></td>
            <td>
              <%= booking[i].memberId.firstName %> <%=
              booking[i].memberId.lastName %>
            </td>
            <% if (booking[i].payments.status === 'Accepted') { %>

            <td>
              <div class="badge badge-success text-wrap" style="width: 6rem">
                <%= booking[i].payments.status %>
              </div>
            </td>
            <% } else if(booking[i].payments.status === 'Rejected') { %>

            <td>
              <div class="badge badge-danger text-wrap" style="width: 6rem">
                <%= booking[i].payments.status %>
              </div>
            </td>
            <% } else if(booking[i].payments.status === 'Proses') { %>

            <td>
              <div class="badge badge-warning text-wrap" style="width: 6rem">
                <%= booking[i].payments.status %>
              </div>
            </td>
            <%} %>
            <td>
              <a
                href="/admin/booking/<%= booking[i].id %>"
                class="btn btn-success btn-circle btn-sm button-update"
                ><i class="fas fa-eye"></i
              ></a>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
