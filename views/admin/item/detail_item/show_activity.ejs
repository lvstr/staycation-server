<div
  class="tab-pane fade"
  id="show-activity"
  role="tabpanel"
  aria-labelledby="show-activity-tab"
>
  <div class="row">
    <div class="col-md-5">
      <form
        action="/admin/item/add/activity"
        method="POST"
        enctype="multipart/form-data"
      >
        <div class="modal-body">
          <div class="form-group">
            <label for="name">Name</label>
            <input
              type="text"
              class="form-control"
              id="name"
              name="name"
              placeholder="Enter Name"
              required
            />
            <label for="type">Type</label>
            <input
              type="text"
              class="form-control"
              id="type"
              name="type"
              placeholder="Enter Type"
              required
            />

            <label for="imageUrl">Image</label>
            <input
              type="file"
              class="form-control"
              id="imageUrl"
              name="imageUrl"
              required
            />
          </div>
        </div>
        <div class="modal-footer justify-content-start">
          <input type="hidden" value="<%= itemId %>" name="itemId" />
          <a href="/admin/item" class="btn btn-secondary" data-dismiss="modal">
            Back
          </a>
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      </form>
    </div>
    <div class="col-md-7">
      <div class="card shadow mb-4">
        <div class="card-body">
          <div class="table-responsive">
            <table
              class="table table-bordered"
              id="dataTableActivity"
              width="100%"
              cellspacing="0"
            >
              <thead>
                <tr>
                  <th>No</th>
                  <th>Name</th>
                  <th>Type</th>
                  <th>Image URL</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% for( let i = 0; i < activity.length; i++ ) { %>
                <tr>
                  <td><%= i + 1 %></td>
                  <td><%= activity[i].name %></td>
                  <td><%= activity[i].type %></td>
                  <td>
                    <img
                      src="https://staycation-rand.herokuapp.com/<%= activity[i].imageUrl %>"
                      alt=""
                      height="70px"
                      width="70px"
                    />
                  </td>
                  <td>
                    <form
                      action="/admin/item/<%= itemId %>/activity/<%= activity[i].id %>?_method=DELETE"
                      method="POST"
                    >
                      <a
                        href="javascript:void()"
                        class="btn btn-warning btn-circle btn-sm button-update"
                        data-id="<%= activity[i].id %>"
                        data-name="<%= activity[i].name %>"
                        data-type="<%= activity[i].type %>"
                        ><i class="fas fa-edit"></i
                      ></a>
                      <button
                        type="submit"
                        class="btn btn-danger btn-circle btn-sm"
                      >
                        <i class="fas fa-trash"></i>
                      </button>
                    </form>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
