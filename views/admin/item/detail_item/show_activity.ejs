<div
  class="tab-pane fade"
  id="show-activity"
  role="tabpanel"
  aria-labelledby="show-activity-tab"
>
  <div class="row">
    <div class="col-md-5">
      <form action="/admin/bank" method="POST" enctype="multipart/form-data">
        <div class="modal-body">
          <div class="form-group">
            <label for="name">Name</label>
            <input
              type="text"
              class="form-control"
              id="name"
              name="name"
              placeholder="Enter Name"
              required
            />
            <label for="type">Type</label>
            <input
              type="number"
              class="form-control"
              id="type"
              name="type"
              placeholder="Enter Type"
              required
            />

            <label for="imageUrl">Image: </label>
            <input
              type="file"
              class="form-control"
              id="imageUrl"
              name="imageUrl"
              required
            />
          </div>
        </div>
        <div class="modal-footer justify-content-start">
          <a href="/admin/item" class="btn btn-secondary" data-dismiss="modal">
            Back
          </a>
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      </form>
    </div>
    <div class="col-md-7">
      <div class="card shadow mb-4">
        <div class="card-body">
          <div class="table-responsive">
            <table
              class="table table-bordered"
              id="dataTableActivity"
              width="100%"
              cellspacing="0"
            >
              <thead>
                <tr>
                  <th>No</th>
                  <th>Name</th>
                  <th>Type</th>
                  <th>Image URL</th>
                  <th>Action</th>
                </tr>
              </thead>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
